            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ccImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_icon_cc_list"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_conversion_absoluteHeight="80dp"
                    tools:layout_conversion_absoluteWidth="104dp" />

                <TextView
                    android:id="@+id/ccTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/greycliffcf_heavy"
                    android:text="Coca Cola"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintStart_toEndOf="@+id/ccImage"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_conversion_absoluteHeight="27dp"
                    tools:layout_conversion_absoluteWidth="59dp" />

                <TextView
                    android:id="@+id/ccType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/greycliffcf_regular"
                    android:text="1.0 liter PET"
                    android:textColor="@color/colorGrey"
                    app:layout_constraintStart_toStartOf="@+id/ccTitle"
                    app:layout_constraintTop_toBottomOf="@id/ccTitle"
                    tools:layout_conversion_absoluteHeight="27dp"
                    tools:layout_conversion_absoluteWidth="82dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/greycliffcf_regular"
                    android:textColor="@color/colorBlack"
                    android:text="1.90 $"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ccImage"
                    app:layout_constraintTop_toBottomOf="@+id/ccType"
                    tools:layout_conversion_absoluteHeight="27dp"
                    tools:layout_conversion_absoluteWidth="82dp"/>


            <ImageButton
                android:id="@+id/ccRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="64dp"
                android:background="@null"
                android:src="@drawable/ic_button_minus_disabled"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ccAdd"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_conversion_absoluteHeight="35dp"
                tools:layout_conversion_absoluteWidth="63dp" />

            <TextView
                android:id="@+id/ccAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/greycliffcf_medium"
                android:text="0"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ccAdd"
