<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThankYouActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/greycliffcf_extrabold"
        android:paddingBottom="10dp"
        android:text="Thank you for your Order!"
        android:textColor="#000"
        android:textSize="45sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/greycliffcf_light"
        android:paddingBottom="10dp"
        android:text="Your order is being processed."
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="330dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:src="@drawable/background_thank_you"/>

    <Button
        android:id="@+id/quicklink_deliverystatus"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom"
        android:background="@drawable/buy_button_background"
        android:fontFamily="@font/greycliffcf_bold"
        android:text="Show delivery status"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/quicklink_home"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="bottom"
        android:background="@drawable/secondary_button"
        android:fontFamily="@font/greycliffcf_bold"
        android:text="Back to home"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack" />

</LinearLayout>